<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/borderlayout"
    android:padding="10dp"
    tools:context=".ViewCarDetails">

    <TextView
        android:id="@+id/banner"
        android:layout_width="246dp"
        android:layout_height="38dp"
        android:layout_marginTop="50dp"
        android:fontFamily="sans-serif-black"
        android:text="View/Edit Car Details"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="61dp"
        android:layout_height="46dp"
        android:background="#277065"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.731"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.055"
        app:srcCompat="@drawable/icons8_car" />

    <EditText
        android:id="@+id/licenceNumberTxt"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:hint="Licence Number"
        android:inputType="number"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/licenceNumbertv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/banner" />

    <EditText
        android:id="@+id/registrationNumberTxt"
        android:layout_width="150dp"
        android:layout_height="53dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:hint="Registration Number"
        android:inputType="text"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/registrationNumbertv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/licenceNumberTxt" />

    <EditText
        android:id="@+id/numberOfSeatsTxt"
        android:layout_width="150dp"
        android:layout_height="53dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Number of Seats"
        android:inputType="number"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/numberOfSeatstv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registrationNumberTxt" />

    <EditText
        android:id="@+id/licenceExpirationTxt"
        android:layout_width="150dp"
        android:layout_height="53dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="licence Expiration"
        android:inputType="date"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/licenceExpirationtv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberOfSeatsTxt" />

    <EditText
        android:id="@+id/makeAndModelTxt"
        android:layout_width="150dp"
        android:layout_height="53dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Make and Model"
        android:inputType="text"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/makeAndModeltv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/licenceExpirationTxt" />

    <EditText
        android:id="@+id/colourTxt"
        android:layout_width="150dp"
        android:layout_height="53dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Colour"
        android:inputType="text"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/colourtv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/makeAndModelTxt" />

    <Button
        android:id="@+id/update"
        android:layout_width="150dp"
        android:layout_height="49dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="#277065"
        android:text="Update "
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/colourTxt" />

    <TextView
        android:id="@+id/licenceNumbertv"
        android:layout_width="150dp"
        android:layout_height="42dp"
        android:text="Licence Number:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.114"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.22" />

    <TextView
        android:id="@+id/registrationNumbertv"
        android:layout_width="150dp"
        android:layout_height="42dp"
        android:text="Registration Number:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.114"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.322" />

    <TextView
        android:id="@+id/numberOfSeatstv"
        android:layout_width="150dp"
        android:layout_height="42dp"
        android:text="Number of Seats:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.114"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.42" />

    <TextView
        android:id="@+id/licenceExpirationtv"
        android:layout_width="150dp"
        android:layout_height="42dp"
        android:text="Licence Expiration:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.114"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.515" />

    <TextView
        android:id="@+id/makeAndModeltv"
        android:layout_width="150dp"
        android:layout_height="42dp"
        android:text="Make and Model:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.114"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.605" />

    <TextView
        android:id="@+id/colourtv"
        android:layout_width="150dp"
        android:layout_height="42dp"
        android:text="Colour:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.114"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.698" />

</androidx.constraintlayout.widget.ConstraintLayout>